---
import Search01 from "~/assets/svgs/search-01.astro";
import MenuDropdown from "./menu-dropdown.astro";
import { SITE } from "~/lib/config";
import ThemeController from "../bases/theme-controller.astro";
---

<div class="navbar bg-base-100 border-b">
  <div class="navbar-start lg:w-1/2">
    <MenuDropdown />
    <img class="lg:hidden" src="/logo.png"/ width="40px" height="40px" alt="Logotipo O Abrangente">
    <a class="text-xl px-2 text-nowrap lg:hidden" href="/" style="font-weight: bold;">{SITE.title}</a>
  </div>
  <div class="navbar-center hidden lg:flex">
    <img src="/logo.png"/ width="50px" height="50px" alt="Logotipo O Abrangente">
    <a class="text-2xl px-2" href="/" style="font-weight: bold;">{SITE.title}</a>
  </div>
  <div class="navbar-end">
    <ThemeController />
    <a class="btn btn-ghost btn-circle" href="/search" aria-label="Search">
      <Search01 />
    </a>
  </div>
</div>
